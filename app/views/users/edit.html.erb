<section class="hero is-dark is-bold">
  <div class="hero-body">
    <div class="container">
      <h1 class="title">
        Edit User Settings
      </h1>
    </div>
  </div>
</section>
<section class="section">
  <div class="columns is-centered">
    <div class="column is-half">
      <%= form_for @user, remote: true, new_session_path: { action: :update }, html: { class: :control } do |f| %>
        <div class="field">
          <%= f.label 'Username', class: 'label' %>
          <%= f.text_field :username, class: 'input' %>
        </div>
        <div class="field">
          <%= f.label 'Email', class: 'label' %>
          <%= f.text_field :email, class: 'input' %>
        </div>
        <div class="control">
          <%= f.submit 'Save', class: 'button is-primary is-outlined is-small' %>
          <%= link_to 'Back', user_path, class: 'button is-outlined is-small' %>
        </div>
      <% end %>
    </div>
  </div>
</section>
