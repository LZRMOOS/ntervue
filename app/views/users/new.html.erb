<section class="hero is-dark is-bold">
  <div class="hero-body">
    <div class="container">
      <h1 class="title">
        Create an Account
      </h1>
    </div>
  </div>
</section>
<section>
  <div class="columns is-centered">
    <div class="column is-one-third">
      <%= form_for @user, html: { class: :control } do |f| %>
        <div class="container">
          <div class="field">
            <%= f.label :username, class: 'label' %>
            <%= f.text_field :username, class: 'input' %>
          </div>
          <div class="field">
            <%= f.label :password, class: 'label' %>
            <%= f.password_field :password, class: 'input' %>
          </div>
          <%= f.submit 'Create', class: 'button is-primary' %>
        </div>
      <%end%>
    </div>
  </div>
</section>
