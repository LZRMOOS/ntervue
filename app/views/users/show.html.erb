<section class="hero is-dark is-bold">
  <div class="hero-body">
    <div class="container">
      <h2 class="title">
        User Settings
      </h2>
      <p>You can edit your username, or your email address.</p>
    </div>
  </div>
</section>
<section class="section">
  <div class="columns is-centered">
    <div class="column is-half">
      <div class="container">
        <p>
          <strong>Username:</strong>
          <%= @user.username %>
        </p>

        <p>
          <strong>Email:</strong>
          <%= @user.email %>
        </p>

        <%= link_to 'Edit', edit_user_path(@user), class: 'button is-info is-outlined is-small' %>
        <%= link_to 'Back', ip_geolocations_path, class: 'button is-outlined is-small' %>
      </div>

      <% if @user.admin %>
        <p>Administrator privileges enabled. Users detailed below:</p>
        <table class="table">
          <thead>
            <th>Username</th>
            <th>Email</th>
            <th></th>
          </thead>
          <% @users.each do |user| %>
            <tr>
              <td><%= user.username %></td>
              <td><%= user.email %></td>
              <td><%= link_to 'Delete User', user_path(user),
                              method: :delete,
                              data: { confirm: "Are you sure you want to delete #{user.username}?" } %></td>
            </tr>
          <% end %>
        </table>
      <% end %>
    </div>
  </div>
</section>
