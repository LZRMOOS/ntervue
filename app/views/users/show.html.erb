<div class="container-fluid">
  <h1>User settings</h1>
  Feel free to edit your username, or your email address.
  <p>
    <strong>Username:</strong>
    <%= @user.username %>
  </p>

  <p>
    <strong>Email:</strong>
    <%= @user.email %>
  </p>

  <%= link_to 'Edit', edit_user_path(@user) %>

  <% if @user.admin %>
    <p>Administrator privileges enabled. Users detailed below:</p>
    <table>
      <tr>
        <th>Username</th>
        <th>Email</th>
      </tr>
      <% @users.each do |user| %>
        <td><%= user.username %></td>
        <td><%= user.email %></td>
        <td><%= link_to 'Delete User', user_path(user),
                        method: :delete,
                        data: { confirm: "Are you sure you want to delete #{user.username}?" } %></td>
      <% end %>
    </table>
  <% end %>
</div>
