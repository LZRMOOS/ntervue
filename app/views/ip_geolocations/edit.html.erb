<div class="columns is-centered">
  <div class="column is-half">
    <h1 class="title">Edit IP Geolocation</h1>
    <%= form_for @ip_geolocation, ip_geolocation_path: { action: :update }, html: { class: :control } do |f| %>
      <div class="field">
        <%= f.label 'Notes', class: 'label' %>
        <%= f.text_area :notes, class: 'textarea' %>
      </div>
      <div class="control">
        <%= f.submit 'Save', class: 'button is-primary is-outlined is-small' %>
        <%= link_to 'Back', ip_geolocations_path, class: 'button is-outlined is-small' %>
      </div>
    <% end %>
  </div>
</div>
