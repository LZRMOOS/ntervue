<section class="hero is-dark is-bold">
  <div class="hero-body">
    <div class="container">
      <h1 class="title">
        New IP Geolocation
      </h1>
    </div>
  </div>
</section>
<section class="section">
  <div class="columns is-centered">
    <div class="column is-half">
      <%= form_for @ip_geolocation, ip_geolocation_path: { action: :create }, html: { class: :control } do |f| %>
        <div class="field">
          <%= f.label :ip_address, 'IP Address', class: 'label' %>
          <%= f.text_field :ip_address, class: 'input' %>
        </div>
        <div class="field">
          <%= f.label 'Notes', class: 'label' %>
          <%= f.text_area :notes, class: 'textarea' %>
        </div>
        <div class="control">
          <%= f.submit 'Save', class: 'button is-primary is-small is-outlined' %>
          <%= link_to 'Back', ip_geolocations_path, class: 'button is-outlined is-small' %>
        </div>
      <% end %>
    </div>
  </div>
</section>
